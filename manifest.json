{
  "name": "Notella",
  "version": "0.2",
  "description": "Website Highlight Extension",
  "manifest_version": 2,
  "icons": {
    "16": "favicon_io/favicon16.png",
    "32": "favicon_io/favicon32.png",
    "192": "favicon_io/favicon192.png"
  },
  "web_accessible_resources": ["colors/*.svg"],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["TextTip.js", "contentScript.js"],
      "css": ["TextTip.css", "highlight.css"]
    }
  ],
  "browser_action": {
    "default_title": "Notella",
    "default_popup": "popup.html",
    "default_icon": "favicon_io/favicon16.png"
  },
  "permissions": ["tabs", "<all_urls>", "activeTab", "storage", "contextMenus"],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com  https://cdn.jsdelivr.net https://unpkg.com/@yaireo/tagify https://unpkg.com/@yaireo/tagify/dist/tagify.polyfills.min.js; object-src 'self'"
}
